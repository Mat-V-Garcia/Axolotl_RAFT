# MagisAI Training Hub - Environment Configuration
# Copy this file to .env and fill in your actual values

# RunPod Configuration
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_endpoint_id_here

# Hugging Face Configuration
HF_TOKEN=your_huggingface_token_here
HF_USERNAME=your_hf_username_here

# Weaviate Configuration (optional - for RAG features)
WEAVIATE_URL=your_weaviate_url_here
WEAVIATE_API_KEY=your_weaviate_api_key_here
WEAVIATE_COLLECTION=MagisDocuments

# OpenAI Configuration (optional - for evaluation)
OPENAI_API_KEY=your_openai_api_key_here

# Backend Security Configuration
API_SECRET_KEY=generate_a_secure_32_char_random_string
ALLOWED_ORIGINS=http://localhost:5173

# Rate Limiting
RATE_LIMIT_ENABLED=true
